<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@drawable/phone_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Computer Image -->
        <ImageView
            android:id="@+id/imageViewComputer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="Computer Image"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Brand Name -->
        <TextView
            android:id="@+id/textViewBrandName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewComputer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Model Name -->
        <TextView
            android:id="@+id/textViewModelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Model Name"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewComputer"
            app:layout_constraintTop_toBottomOf="@id/textViewBrandName"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Serial Number -->
        <TextView
            android:id="@+id/textViewSerialNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Serial Number"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewComputer"
            app:layout_constraintTop_toBottomOf="@id/textViewModelName"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Price -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewComputer"
            app:layout_constraintTop_toBottomOf="@id/textViewSerialNumber"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
